# Performance Optimization Configuration
# Add these settings to your .env file for optimal performance

# Redis Cache Configuration (Production)
REDIS_URL=redis://your-redis-host:6379/0
ENABLE_CACHE=True
CACHE_TTL=300
CACHE_KEY_PREFIX=papers2code_prod
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_KEEPALIVE=True

# MongoDB Performance Settings
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=5
ENABLE_QUERY_HINTS=True
OPTIMIZE_COUNT_QUERIES=True

# Paper Transformation Settings
PAPER_TRANSFORM_BATCH_SIZE=20

# Atlas Search Settings (if using MongoDB Atlas)
ATLAS_SEARCH_INDEX_NAME=papers_index
ATLAS_SEARCH_SCORE_THRESHOLD=0.5
ATLAS_SEARCH_OVERALL_LIMIT=2400
ATLAS_SEARCH_TITLE_BOOST=3.0

# Example Redis URLs for different environments:
# Local Redis: redis://localhost:6379/0
# Redis Cloud: redis://username:password@host:port/db
# Redis with SSL: rediss://username:password@host:port/db
# Redis Sentinel: redis+sentinel://host:port/service_name

# Performance Tips:
# 1. Use Redis in production for best caching performance
# 2. Adjust CACHE_TTL based on how often your data changes
# 3. Increase MONGO_MAX_POOL_SIZE if you have high concurrent load
# 4. Set PAPER_TRANSFORM_BATCH_SIZE based on your server's memory and CPU
# 5. Monitor Redis memory usage and set appropriate eviction policies