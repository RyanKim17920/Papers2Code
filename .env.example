# ============================================
# Papers2Code - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control
# ============================================

# ---------------------------------------------
# Application Environment
# ---------------------------------------------
# Options: DEV, DEVELOPMENT, production
ENV_TYPE=DEV

# Application logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_LOG_LEVEL=INFO

# ---------------------------------------------
# Database Configuration
# ---------------------------------------------
# MongoDB connection strings for different environments
# Local: mongodb://localhost:27017/papers2code
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/papers2code

# Development database
MONGO_URI_DEV=mongodb://localhost:27017/papers2code_dev

# Development environment (alternative)
MONGO_URI_DEVELOPMENT=mongodb://localhost:27017/papers2code_dev

# Production database (DO NOT USE LOCAL VALUES IN PRODUCTION)
MONGO_URI_PROD=

# Production test database
MONGO_URI_PROD_TEST=

# Main connection string (used by deployment)
MONGO_CONNECTION_STRING=mongodb://localhost:27017/papers2code

# MongoDB performance settings
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=5
ENABLE_QUERY_HINTS=True
OPTIMIZE_COUNT_QUERIES=True

# ---------------------------------------------
# Authentication & Security
# ---------------------------------------------
# Generate a strong secret key for JWT token signing
# Example: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here-generate-with-secrets-module

# JWT algorithm (default: HS256)
ALGORITHM=HS256

# Token expiration times (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# ---------------------------------------------
# GitHub OAuth Configuration
# ---------------------------------------------
# Create OAuth app at: https://github.com/settings/applications/new
# Homepage URL: http://localhost:5173 (dev) or https://your-domain.com (prod)
# Callback URL: http://localhost:5173/auth/github/callback (dev)

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Optional: Override default GitHub OAuth URLs
# GITHUB_AUTHORIZE_URL=https://github.com/login/oauth/authorize
# GITHUB_ACCESS_TOKEN_URL=https://github.com/login/oauth/access_token
# GITHUB_API_USER_URL=https://api.github.com/user
# GITHUB_SCOPE=user:email

# Owner GitHub username (for admin features)
OWNER_GITHUB_USERNAME=your-github-username

# ---------------------------------------------
# Frontend Configuration
# ---------------------------------------------
# Frontend URL for CORS and OAuth redirects
FRONTEND_URL=http://localhost:5173

# Backend API port
PORT=5000

# ---------------------------------------------
# Email Configuration (Optional)
# ---------------------------------------------
# For author outreach features (currently manual)
OUTREACH_EMAIL_ADDRESS=your-email@example.com

# ---------------------------------------------
# Atlas Search Configuration (MongoDB Atlas)
# ---------------------------------------------
# Atlas full-text search settings
ATLAS_SEARCH_INDEX_NAME=papers_index
ATLAS_SEARCH_SCORE_THRESHOLD=0.5
ATLAS_SEARCH_OVERALL_LIMIT=100
ATLAS_SEARCH_TITLE_BOOST=3.0

# ---------------------------------------------
# Performance & Caching (Optional)
# ---------------------------------------------
# Redis cache configuration for production
# ENABLE_CACHE=False
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=300
# CACHE_KEY_PREFIX=papers2code
# REDIS_MAX_CONNECTIONS=20
# REDIS_SOCKET_KEEPALIVE=True

# Paper transformation settings
PAPER_TRANSFORM_BATCH_SIZE=20

# ---------------------------------------------
# Voting & Moderation Thresholds
# ---------------------------------------------
# Number of votes needed to confirm implementability status
NOT_IMPLEMENTABLE_CONFIRM_THRESHOLD=3
IMPLEMENTABLE_CONFIRM_THRESHOLD=2

# ---------------------------------------------
# LLM Annotation (Optional - for scripts)
# ---------------------------------------------
# For running LLM annotation scripts
# LLM_PROVIDER=gemini
# GOOGLE_API_KEY=your-google-api-key
# OPENAI_API_KEY=your-openai-api-key

# ---------------------------------------------
# SECURITY NOTES
# ---------------------------------------------
# 1. NEVER commit this file with real values to version control
# 2. Use strong, randomly generated secrets for FLASK_SECRET_KEY
# 3. In production, use environment variable management tools:
#    - Render: Dashboard environment variables
#    - Railway: `railway variables set KEY=value`
#    - Vercel: `vercel env add KEY`
# 4. Rotate secrets regularly (especially after team member changes)
# 5. Use different secrets for each environment (dev, staging, production)
# 6. Monitor for exposed secrets using tools like:
#    - GitHub Secret Scanning
#    - GitGuardian
#    - TruffleHog
# 7. Enable 2FA on all service accounts (GitHub, MongoDB Atlas, etc.)
